<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_pro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="appthai.pdmobile.showpro.ShowPro"
    android:background="@drawable/bg2">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/livPromotion"
        android:background="#82f6efef"
        android:layout_below="@+id/linTop"
        android:layout_above="@+id/button" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linTop"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:text="@string/TitleShowPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textStyle="normal|bold"
            android:textSize="@dimen/h1"
            android:textColor="@color/aText" />

        <ImageView
            android:layout_width="80dp"
            app:srcCompat="@drawable/ais_logo"
            android:id="@+id/imageView4"
            android:layout_height="@dimen/icon_small" />

    </LinearLayout>

    <Button
        android:text="Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
